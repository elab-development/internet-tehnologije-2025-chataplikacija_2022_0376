{
  "name": "chat-backend",
  "version": "1.0.0",
  "description": "Real-time chat application backend with Express and Socket.IO",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "migration:generate": "typeorm migration:generate -d src/config/database.ts",
    "migration:run": "typeorm migration:run -d src/config/database.ts",
    "migration:revert": "typeorm migration:revert -d src/config/database.ts",
    "seed": "ts-node src/seeds/seed.ts",
    "lint": "eslint src --ext .ts",
    "test": "jest"
  },
  "keywords": ["chat", "real-time", "socket.io", "express", "typescript"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.2",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.20",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.4.7",
    "cors": "^2.8.5",
    "express-validator": "^7.2.0",
    "multer": "^1.4.5-lts.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.10.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.12",
    "@types/cookie-parser": "^1.4.7",
    "@types/morgan": "^1.9.9",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^8.57.1",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14"
  }
}